<Window
    x:Class="Mica_In_WinUI3_CS.TestFullScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mica_In_WinUI3_CS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border BorderThickness="5" BorderBrush="Red" Background="Transparent" CornerRadius="3">
        <ScrollViewer>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" 
              HorizontalAlignment="Center">
                <Button x:Name="FullScreenButton"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center" Click="FullScreenState_Click" Margin="20, 20, 20, 20"></Button>
                <Button x:Name="MoveWindow" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="MoveWindow_Click" Content="Move Window" Margin="20, 20, 20, 20"></Button>
                <Button x:Name="BorderAndTitleBar" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="SetBorderAndTitleBar_Click" Content="Set Border and TitleBar" Margin="20, 20, 20, 20"></Button>

            </StackPanel>
        </ScrollViewer>

    </Border>
</Window>
